{
  "name": "Mixmit",
  "version": "0.15",
  "manifest_version": 2,
  "description": "Mixology transmitter. Streams an HTML page as a WebRTC A/V stream",
  "icons" : {
  	  "16":"icon16.png",
  	  "48":"icon48.png",
	  "128":"icon128.png"},
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
   {
    "matches": ["http://*/*"],
    "js"     : ["mixology-shim.js"]
   }],
  "background": {
	"scripts": ["socket.io.js","mixology.js","background.js"],
	"persistent":true
	},
  "permissions" : [
    "http://*/*",
    "http://*/",
    "tabCapture",
    "tabs"

    ]
}